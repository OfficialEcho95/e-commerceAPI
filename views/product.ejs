	<!-- Header -->
	<%- include('./partials/header') %>


    <!-- Product -->
    <div class="bg0 m-t-23 p-b-140">
      <div class="container">
		<div class="p-b-10">
			<h3 class="ltext-103 cl5">
				All Products
			</h3>
		</div>
			<div class="row isotope-grid">
				<% for(let product of products) {%>
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2-pic hov-img0">
							<img src="<%= product.image_url %>" alt="IMG-PRODUCT">

							<a href="product-detail/<%= product.product_uuid %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
								View Item
							</a>
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<a href="product-detail/<%= product.product_uuid %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									<%= product.name %>
								</a>

								<span class="stext-105 cl3">
									$<%= product.price %>
								</span>
							</div>
						</div>
					</div>
				</div>
				<% } %>
			</div>

      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
